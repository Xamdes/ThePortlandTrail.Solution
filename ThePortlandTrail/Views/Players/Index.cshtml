@using ThePortlandTrail.Models

@{
  Layout = "_Layout";
}

<h1>The Portland Trail</h1>
@if (@Model.Count == 0) {
  <h4>No players have been added yet!</h4>
}
@foreach(Player p in Model)
{
  <div class="row well">
    <div class="col-md-2">
      <p>Player: <a class="whiteLink" href="/players/@p.GetId()/details">@p.GetName()</a></p>
    </div>
    <div class="col-md-3">
      <p>Hunger: @p.GetFood() Mood: @p.GetFix() Rest: @p.GetRest()</p>
    </div>
    <div class="col-md-7 row">
      <div align="center" class="col-md-2">
        <form action="/players/@p.GetId()/food" method="get">
          <button class="btn btn-primary" type="submit">Find Food</button>
        </form>
      </div>
      <div align="center" class="col-md-2">
        <form action="/players/@p.GetId()/rest" method="get">
          <button class="btn btn-primary" type="submit">Rest</button>
        </form>
      </div>
      <div align="center" class="col-md-2">
        <form action="/players/@p.GetId()/fix" method="get">
          <button class="btn btn-primary" type="submit">Elevate Mood</button>
        </form>
      </div>
      <div align="center" class="col-md-3">
        <form action="/players/@p.GetId()/explore" method="get">
          <button class="btn btn-primary" type="submit">Explore</button>
        </form>
      </div>
      <div align="center" class="col-md-2" >
        <form action="/players/@p.GetId()/delete" method="post">
          <button type="submit" class="btn btn-danger">Delete Player</button>
        </form>
      </div>
    </div>
  </div>
}

<form action="/players/create">
  <button type="submit" class="btn btn-success ot-btn-content">Create New Player</button>
</form>

<form action="/">
  <button type="submit" class="btn btn-info ot-btn-content">Go Home</button>
</form>
